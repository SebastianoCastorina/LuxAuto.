    <div class="container-fluid mt-5 pt-5 text-center text-black">
        <form action="/Autovettura/FilterByMarchio" method="post">
            <label class="text-black fw-bold fc fs-4 text-center ms" for="selectedMarchio">REALIZZA IL TUO SOGNO</label>
            <div class="d-flex justify-content-center">
            @Html.DropDownList("selectedMarchio", ViewData["selectedMarchio"] as SelectList, "Seleziona un marchio", new { @class = "form-control text-center" })
                </div>
            <input type="submit" value="Cerca" class="btn btn-primary mt-2 justify-content-center">
        </form>
    </div>
</body>
</html>
