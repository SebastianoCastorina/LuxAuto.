@model IEnumerable<LuxAuto.Models.Autovettura>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            background-image: url('/Content/assets/img/background2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            flex-direction: column;
            align-items: center; 
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            width: 100%;
            max-width: 1200px; 
            margin: 0 auto; 
        }

        .video-container {
            flex-basis: 50%;
            margin-right: 20px; 
        }

            .video-container video {
                width: 100%;
                height: auto;
            }

        .marchi-container {
            flex-basis: 50%;
            padding: 20px;
            box-sizing: border-box;
        }

        .marchi-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .marchi-list-item {
            flex-basis: calc(50% - 10px);
            margin-bottom: 10px;
        }

            .marchi-list-item a {
                text-decoration: none;
                color: black;

            }

     
    </style>
</head>

@{
    ViewBag.Title = "ListaCarFiltrate";
}
<body>

    
    <div class="container">
        <div class="video-container">
            <video autoplay muted playsinline loop>
                <source src="~/Content/assets/video/carfiltratevideo.mp4" type="video/mp4" />
            </video>
        </div>
     

         
