@model LuxAuto.Models.Autovettura

@{
    ViewBag.Title = "_Carosello";
}

<div id="carousel-@Model.idAuto" class="carousel slide">

    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < 7; i++)
        {
            <li data-bs-target="#carousel-@Model.idAuto" data-bs-slide-to="@i" class="d-block carousel-slide carousel-image mx-auto @(i == 0 ? "active" : "")" alt="Image @(i + 1)"></li>
        }
    </ol>
    <!-- Slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < 7; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="~/Content/assets/img/@Model.GetType().GetProperty("Foto" + i).GetValue(Model)" class="d-block w-100" alt="Image @(i + 1)">
            </div>
        }
    </div>
    <!-- Controls -->
    <a class="carousel-control-prev" href="#carousel-@Model.idAuto" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class = "carousel-control-next" href="#carousel-@Model.idAuto" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>
