@model IEnumerable<LuxAuto.Models.Optional>
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeOptional)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeOptional)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idOptional }) |
            @Html.ActionLink("Details", "Details", new { id=item.idOptional }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idOptional })
        </td>
    </tr>
}

</table>
